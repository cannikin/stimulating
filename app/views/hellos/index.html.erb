<p id="notice"><%= notice %></p>

<h1>Hellos</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hellos.each do |hello| %>
      <tr>
        <td><%= link_to 'Show', hello %></td>
        <td><%= link_to 'Edit', edit_hello_path(hello) %></td>
        <td><%= link_to 'Destroy', hello, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<div data-controller="hello">
  <input type="text" data-target="hello.text">
  <button data-action="click->hello#greet">Greet Me!</button>
</div>

<br>

<%= link_to 'New Hello', new_hello_path %>
